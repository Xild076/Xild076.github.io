{
    "name": "python-ssg-project",
    "version": "1.0.0",
    "description": "Static site generated with Python SSG",
    "scripts": {
      "build:css": "sass src/style.scss docs/static/css/style.css --style compressed --no-source-map",
      "watch:css": "sass --watch src/style.scss:docs/static/css/style.css --style expanded --embed-source-map",
      "build:site": "python src/build.py",
      "build": "npm run build:css && npm run build:site"
    },
    "keywords": [
      "ssg",
      "python",
      "static",
      "site",
      "generator"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
      "sass": "^1.60.0"
    }
  }
  